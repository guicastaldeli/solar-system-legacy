{
    "version": 2,
    "builds": [
        { 
            "src": "root/**/*",
            "use": "@vercel/static"
        },
        { 
            "src": "assets/**/*", 
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/",
            "destination": "/root/main/main.html"
        },
        { 
            "source": "/assets/(.*)", 
            "destination": "/assets/$1" 
        },
        { 
            "source": "/root/(.*)", 
            "destination": "/root/$1" 
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.js$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        },
        {
            "source": "/(.*)\\.glsl$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        }
    ]
}